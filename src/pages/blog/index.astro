---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Nav from '../../components/Nav.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';
import FadeIn from '../../components/motion/FadeIn.tsx';
import Stagger from '../../components/motion/Stagger.tsx';

const posts = (await getCollection('blog')).sort((a, b) => +new Date(b.data.pubDate) - +new Date(a.data.pubDate));
---
<BaseLayout title="Blog â€” Bharath N" description="Technical articles, notes, and insights by Bharath N.">
    <Fragment slot="app-header">
        <Nav />
    </Fragment>
    <section class="pt-10 pb-16">
        <FadeIn client:visible as="h1" className="text-3xl font-bold tracking-tight">Blog</FadeIn>
        <FadeIn client:visible delay={0.06} as="p" className="mt-2 text-zinc-500">Thoughts on web performance, Astro, React, and more.</FadeIn>

        <Stagger client:visible className="mt-8 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            {posts.map(({ slug, data }) => (
                <a href={`/blog/${slug}`}
                   class="group rounded-xl border border-zinc-200/60 dark:border-zinc-800/60 p-4 hover:border-emerald-400/60 hover:shadow-sm transition-all">
                    <div class="text-sm text-zinc-500">{new Date(data.pubDate).toLocaleDateString()}</div>
                    <div class="mt-1 font-medium group-hover:text-emerald-600">{data.title}</div>
                    <p class="mt-1 text-sm text-zinc-500 line-clamp-2">{data.description}</p>
                </a>
            ))}
        </Stagger>
    </section>
    <Fragment slot="app-footer">
        <Footer />
    </Fragment>
</BaseLayout>

