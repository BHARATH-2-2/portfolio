---
import BaseLayout from '../layouts/BaseLayout.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';
import FadeIn from '../components/motion/FadeIn.tsx';
import Stagger from '../components/motion/Stagger.tsx';

const projects = (await getCollection('projects')).sort((a, b) => b.data.year - a.data.year).slice(0, 6);
const posts = (await getCollection('blog')).sort((a, b) => +new Date(b.data.pubDate) - +new Date(a.data.pubDate)).slice(0, 4);
---
<BaseLayout title="Bharath N — Portfolio & Blog">
    <Fragment slot="app-header">
        <Nav />
    </Fragment>

    <section class="pt-14 pb-10">
        <div class="mx-auto max-w-5xl text-center">
            <FadeIn client:visible as="h1" className="text-4xl sm:text-5xl md:text-6xl font-bold tracking-tight">
                Building performant web experiences.
            </FadeIn>
            <FadeIn client:visible delay={0.06} as="p" className="mt-4 text-zinc-500 text-base sm:text-lg">
                I'm Bharath N — Full-stack developer crafting modern web applications with FastAPI, React, and cutting-edge AI tools. Welcome to my portfolio and technical blog.
            </FadeIn>
            <FadeIn client:visible delay={0.12} as="div" className="mt-8 flex items-center justify-center gap-4">
                <a href="/projects" class="inline-flex items-center rounded-md bg-emerald-600 px-4 py-2 text-white hover:bg-emerald-700 transition-colors">View Projects</a>
                <a href="/blog" class="inline-flex items-center rounded-md border border-zinc-300 dark:border-zinc-700 px-4 py-2 hover:bg-zinc-100 dark:hover:bg-zinc-900 transition-colors">Read Blog</a>
                <a href="/resume.pdf" download class="inline-flex items-center rounded-md border border-emerald-600 text-emerald-700 dark:text-emerald-300 px-4 py-2 hover:bg-emerald-50 dark:hover:bg-emerald-900/30 transition-colors">Download Resume</a>
            </FadeIn>
        </div>
    </section>

    <FadeIn client:visible as="section" className="py-10" delay={0.06}>
        <h2 class="text-xl font-semibold mb-4 tracking-tight">Featured Projects</h2>
        <Stagger client:visible className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            {projects.map(({ slug, data }) => (
                <a href={`/projects/${slug}`}
                   class="group rounded-xl border border-zinc-200/60 dark:border-zinc-800/60 p-4 hover:border-emerald-400/60 hover:shadow-sm transition-all">
                    {data.cover ? <img src={data.cover} alt="" class="rounded-md mb-3 aspect-video object-cover" /> : null}
                    <div class="text-sm text-zinc-500">{data.year}</div>
                    <div class="mt-1 font-medium group-hover:text-emerald-600">{data.title}</div>
                    <p class="mt-1 text-sm text-zinc-500 line-clamp-2">{data.description}</p>
                    <div class="mt-3 flex flex-wrap gap-2">
                        {data.tech?.slice(0,3).map((t) => <span class="text-xs px-2 py-0.5 rounded-full bg-emerald-100/60 text-emerald-700 dark:bg-emerald-900/30 dark:text-emerald-300">{t}</span>)}
                    </div>
                </a>
            ))}
        </Stagger>
    </FadeIn>

    <FadeIn client:visible as="section" className="py-10" delay={0.12}>
        <h2 class="text-xl font-semibold mb-4 tracking-tight">Latest Posts</h2>
        <Stagger client:visible className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6" from="bottom">
            {posts.map(({ slug, data }) => (
                <a href={`/blog/${slug}`}
                   class="group rounded-xl border border-zinc-200/60 dark:border-zinc-800/60 p-4 hover:border-emerald-400/60 hover:shadow-sm transition-all">
                    <div class="text-sm text-zinc-500">{new Date(data.pubDate).toLocaleDateString()}</div>
                    <div class="mt-1 font-medium group-hover:text-emerald-600">{data.title}</div>
                    <p class="mt-1 text-sm text-zinc-500 line-clamp-2">{data.description}</p>
                </a>
            ))}
        </Stagger>
    </FadeIn>

    <Fragment slot="app-footer">
        <Footer />
    </Fragment>
</BaseLayout>
